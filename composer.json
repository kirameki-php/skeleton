{
    "name": "kirameki/skeleton",
    "type": "project",
    "require": {
        "php": ">=8.5",
        "ext-apcu": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pcntl": "*",
        "ext-pdo": "*",
        "ext-posix": "*",
        "hidehalo/nanoid-php": "^2.0",
        "kirameki/container": "dev-main",
        "kirameki/database": "dev-main",
        "kirameki/utils": "dev-main"
    },
    "require-dev": {
        "phpstan/phpstan": "^2",
        "phpunit/phpunit": "~12"
    },
    "autoload": {
        "psr-4": {
            "Kirameki\\": "src/"
        }
    },
    "config": {
        "discard-changes": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit --coverage-html=coverage",
        "ci-test": "vendor/bin/phpunit --coverage-clover ./coverage.xml",
        "analyze": "vendor/bin/phpstan analyse --memory-limit 1G"
    }
}
